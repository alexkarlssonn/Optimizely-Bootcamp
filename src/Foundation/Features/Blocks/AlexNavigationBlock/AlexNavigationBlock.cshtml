@using Foundation.Features.Blocks.AlexNavigationBlock

@model AlexNavigationBlockViewModel

<div style="background-color: @Model.CurrentBlock.BackgroundColor; opacity:@Model.CurrentBlock.BlockOpacity;" class="row @(Model.CurrentBlock.Padding + " " + Model.CurrentBlock.Margin)">
    <div class="col-12">
        <div class="profile-sidebar">

            @* The list of child pages below the given root page *@
            <ul class="profile-sidebar__group" @Html.EditAttributes(x => x.CurrentBlock.RootPage)>
                @foreach (var item in Model.NavigationItems)
                {
                    var url = Url.PageUrl(item.Url);
                    <li class="profile-sidebar__item">
                        <a href="@url">@item.Name</a>
                    </li>
                }
            </ul>

        </div>
    </div>
</div>